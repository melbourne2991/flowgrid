{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["dom", "esnext"],
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"]
}
